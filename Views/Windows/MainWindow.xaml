<Window
	x:Class="MediaCenter.Views.Windows.MainWindow"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:MediaCenter"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	Title="MainWindow"
	Width="800"
	Height="450"
	WindowStartupLocation="CenterScreen"
	WindowState="Maximized"
	mc:Ignorable="d">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition Height="Auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="Auto" />
		</Grid.RowDefinitions>

		<md:ColorZone
			Grid.Row="0"
			Height="50"
			Mode="PrimaryDark">
			<Grid>
				<TextBlock
					HorizontalAlignment="Center"
					VerticalAlignment="Center"
					FontFamily="Montserrat"
					FontSize="24"
					FontWeight="ExtraBold"
					Text="ООО &quot;МедиЦентр&quot;" />
				<Button
					Margin="5"
					HorizontalAlignment="Right"
					Click="ButtonBase_OnClick"
					Cursor="Hand"
					Style="{DynamicResource MaterialDesignPaperDarkButton}">
					<md:PackIcon Kind="ArrowLeft" />
				</Button>
			</Grid>
		</md:ColorZone>

		<Frame
			Name="MainFrame"
			Grid.Row="1"
			ContentRendered="MainFrame_OnContentRendered"
			NavigationUIVisibility="Hidden" />
	</Grid>
</Window>